.content__default {
  margin: 0 auto;
  padding: 1rem 2rem;
  max-width: $contentWidth;
  position: relative;
  background: white;
}

.content {
  padding: 0 2rem;
  width: $contentWidth;
  max-width: $contentWidth;
}

.full-width {
  width: 100vw;
  max-width: 100vw;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
}